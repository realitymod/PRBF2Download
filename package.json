{
  "name": "PRBF2-Download-Assistant",
  "version": "1.0.0",
  "description": "A automatic download tool for Project Reality: Battlefield 2",
  "main": "./app/main.js",
  "dependencies": {
    "electron-titlebar-windows": "^3.0.0",
    "webtorrent": "latest"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "author": "RealityMod",
  "build": {
    "appId": "PRBF2-Download-Assistant",
    "win": {
      "target": "NSIS",
      "icon": "/app/assets/icons/ico/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest"
  }
}
